pipeline {
    agent any

    environment {
        // Load the contents of the .env file from Jenkins credentials (Secret Text)
        ENV_VARS = credentials('env-file-secret')  // You must store the full .env content in this secret
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-token',
                    url: 'https://github.com/Rayyan-Imtiaz/colorpalette/'
            }
        }

        stage('Write .env File') {
            steps {
                script {
                    writeFile file: '.env', text: ENV_VARS
                }
            }
        }

        stage('Build and Deploy') {
            steps {
                sh 'docker-compose -p colorpalette-ci -f docker-compose.yml up -d --build'
            }
        }
    }

    post {
        always {
            sh 'docker-compose -p colorpalette-ci -f docker-compose.yml down || true'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
